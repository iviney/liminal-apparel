<%# Replaces gem's spree_application.html.erb %>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<%= hook :inside_head do %>
  <%= render :partial => 'shared/head'%>
  <%= render :partial => 'shared/head_menu'%>
<% end %>

<%= yield :extra_head_stuff %>

<%= render :partial => 'shared/google_analytics' %>

</head>

<body >
  <div class="liminal">
    <%= render :partial => 'shared/main_menu' %>

    <div id="liminal-content">
      <% if flash[:error] %>
        <div class="flash errors"><%= flash[:error] %></div>
      <% end %>
      
      <%= yield :post_header %>
      <%= yield %>

      <div class="clear"></div>
    </div>

    <div id="liminal-footer">
      <% if australia? %>
        <h1>A U S T R A L I A</h1>
      <% else %>
        <h1>N E W &nbsp; Z E A L A N D</h1>
      <% end %>
      <%= link_to_other_site %>
    </div>
  </div>
</body>
</html>
