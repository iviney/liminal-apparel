<%#= stylesheet_link_tag "liminal.css" %>   <%# TBD: figure what actually includes liminal.css after screen.css. %>
<%= stylesheet_link_tag "superfish.css" %>  <!--edited from original-->
<%= stylesheet_link_tag "jquery.tweet.css" %>

<%= javascript_include_tag "liminal/hoverIntent.js" %>
<%= javascript_include_tag "liminal/superfish.js" %>

<%= javascript_include_tag "liminal/jquery.tweet.js" %>

<%= javascript_include_tag "liminal/frontpage.js" %>

<script type="text/javascript">
    // initialise plugins
    jQuery(function(){
            jQuery('ul.sf-menu').superfish({
            autoArrows:  false,                         // disable generation of arrow mark-up
            speed: 'fast',
            delay: 0
        });                                             // see http://users.tpg.com.au/j_birch/plugins/superfish/#options
    });
</script>

<%= javascript_tag do %>
  // initialize twitter feed - see http://tweet.seaofclouds.com/
  
  $(function(){
    $(".tweet").tweet({
      username: "LiminalApparel",
      join_text: "auto",
      avatar_size: 0,
      count: 6,
      auto_join_text_default: ":",//"we said,",
      auto_join_text_ed: ":",//"we",
      auto_join_text_ing: ":",//"we were",
      auto_join_text_reply: ":",//"we replied to",
      auto_join_text_url: "we were checking out:",
      loading_text: "loading tweets..."
    });
  });
<% end %>
